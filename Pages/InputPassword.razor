@page "/InputPassword"

@inherits InputBase<string>
<!-- 继承于InputBase<T>,通过重写TryParseValueFromString方法，将用户在表单输入框中输入的数据转换成需要的T类型-->

<input type="password" class="@CssClass" @bind-value="@CurrentValue" />

@code {
    // value => 表单输入框中填写的值
    // result => 类型是TValue，和InputBase<T>中的设定一直，该值会绑定到表单中Model的对应栏上
    // validationErrorMessage => 做类型转换时，失败给出的错误信息
    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        // 由于输入的数据类型本身就为String，所以不需要做任何类型转换
        validationErrorMessage = null;
        result = value;
        return true;
    }
}
